					<text/>
				</attribute>
			</optional>
			<optional>
				<attribute name="ignore">
					<text/>
				</attribute>
			</optional>
			<zeroOrMore>
				<ref name="field"/>
			</zeroOrMore>
		</element>
	</define>

	<define name="include">
		<element name="include">
			<attribute name="path">
