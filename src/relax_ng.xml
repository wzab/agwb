			</optional>
			<attribute name="name">
				<text/>
			</attribute>
			<optional>
				<attribute name="reps">
					<text/>
				</attribute>
			</optional>
			<optional>
				<attribute name="used">
					<text/>
				</attribute>
			</optional>
			<optional>
				<attribute name="stype">
					<text/>
				</attribute>
			</optional>
			<optional>
				<attribute name="type">
					<text/>
				</attribute>
			</optional>
			<optional>
				<attribute name="width">
					<text/>
				</attribute>
			</optional>
			<optional>
				<attribute name="ignore">
					<text/>
				</attribute>
			</optional>
			<zeroOrMore>
				<ref name="field"/>
			</zeroOrMore>
		</element>
	</define>

	<define name="subblock">
		<element name="subblock">
			<optional>
				<attribute name="force_vec">
					<text/>
				</attribute>
			</optional>
			<attribute name="name">
				<text/>
			</attribute>
			<attribute name="type">
				<text/>
			</attribute>
			<optional>
				<attribute name="desc">
					<text/>
